<section class="displayprof bg_<%= user.color.name %>">
  <div class="wrap">
    <div class="post_profimg">
      <div class="mainimgframe">
        <%= image_tag user_image_path(user.id) %>
      </div>
    </div>

    <div class="prof_body">
      <div class="under">
        <div class="multiline-text-container">
          <h1 class="prof_name multiline-text-2"><%= user.name %></h1>
        </div>
      </div>
      <div class="multiline-text-container">
        <h2 class="prof_org multiline-text-2"><span class="material-icons">room</span><%= user.organization %></h2>
      </div>
      <div class="multiline-text-container">
        <h2 class="prof_tag multiline-text">
          <% user.tag.each do |tag| %>
            #<%= tag.name %>&nbsp;
          <% end %>
        </h2>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="prof_msg multiline-text-container">
      <% if user.comment? %>
        <p class="prof_msg_body multiline-text-3"><%= user.comment %></p>
      <% end %>
    </div>
  </div>
</section>
