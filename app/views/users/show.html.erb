<section>
  <div class="wrap">
  <% if user_signed_in? and @user.id == current_user.id %>
  <div class="center_buttons">
      <%= link_to 'プロフィール編集', edit_user_registration_path, class:"button_area prof_edit_button" %>
  </div>
  <% end %>
<% if !@user.has_role? :admin or (user_signed_in? and current_user.has_role? :admin) %>
  <div class="prof_info">
    <div class="show_profimg">
      <div class="show_mainimgframe">
          <% if @user.profimg %>
            <%= image_tag show_profimg_user_path(@user.id), class:"p_item" %>
          <% else %>
            <p class="p_item"> Not Image</p>
          <% end %>
      </div>
    </div>
    <p class="p_item">名前: <%= @user.name %></p>
    <% if user_signed_in? and @user.id == current_user.id %>
      <p class="p_item">メールアドレス: <%= @user.email %></p>
    <% end %>
    <p class="p_item">所属: <%= @user.organization %></p>
    <% if user_signed_in? and @user.id == current_user.id %>
      <p class="p_item">性別: <%= I18n.t("enums.user.gender.#{@user.gender}") %></p>
      <p class="p_item">生年月日: <%= @user.birthday %></p>
    <% end %>
    <p class="p_item">パーソナリティ: <%= I18n.t("enums.user.personality.#{@user.personality}") %></p>
    <p class="p_item">プロフィールカラー: <%= I18n.t("enums.user.color.#{@user.color.name}") %></p>
    <p>タグ:
      <ul class="taglist p_item">
        <% @user.tag.each do |tag| %>
          <li><%= tag.name %></li>
        <% end %>
      </ul>
    </p>
    <p class="p_item">ひとこと: <%= @user.comment %></p>
    <p class="p_item">ポイント: <%= @user.point %> pt</p>

