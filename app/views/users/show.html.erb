<p><%= link_to 'Edit', edit_user_registration_path %></p>

<p>Name: <%= @user.name %></p>
<p>Email: <%= @user.email %></p>
<p>Organization: <%= @user.organization %></p>
<p>Comment: <%= @user.comment %></p>
<p>Tag:
  <ul>
    <% @user.tag.each do |tag| %>
      <li><%= tag.name %></li>
    <% end %>
  </ul>
</p>
<p>Reviewers:
  <ul>
    <% @user.reviewer_relationships.each do |review| %>
      <li>
        <ul>
          <li>By: <%= review.reviewer.name %></li>
          <li>Rate: <%= review.rate %></li>
          <li>Rate: <%= review.comment %></li>
        </ul>
      </li>
    <% end %>
  </ul>
</p>

<p>Review</p>
<% if current_user.reviewing? @user %>
  <p>You have already reviewed!</p>
<% else %>
  <%= form_with model: @review, local: true do |f| %>
    <%= f.hidden_field :reviewer_id, value: current_user.id %>
    <%= f.hidden_field :reviewed_id, value: @user.id %>
    <div class="field">
      <%= f.label :rate %><br />
      <%= f.number_field :rate %>
    </div>
    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_field :comment, autocomplete: "Comment" %>
    </div>
    <div class="actions">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
<% end %>
